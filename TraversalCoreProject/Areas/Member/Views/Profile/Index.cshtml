@model TraversalCoreProject.Areas.Member.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Profil Düzenleme Sayfası</h1>

<form method="post" enctype="multipart/form-data">
    @Html.Label("Adınız")
    <input type="text" asp-for="name" value="@Model.name" class="form-control" />
    <br />
    @Html.Label("Soyadınız")
    <input type="text" asp-for="surname" value="@Model.surname" class="form-control" />
    <br />
    @Html.Label("Mail Adresiniz")
    <input type="text" asp-for="mail" value="@Model.mail" class="form-control" />
    <br />
    @Html.Label("Şifreniz")
    <input type="text" asp-for="password" value="@Model.password" class="form-control" />
    <br />
    @Html.Label("Şifre Tekrar")
    <input type="text" asp-for="confirmpassword" value="@Model.confirmpassword" class="form-control" />
    <br />
    @Html.Label("Telefon Numarası")
    <input type="text" asp-for="phonenumber" value="@Model.phonenumber" class="form-control" />
    <br />
    <div class="form-group">
        <label>Resim Seçin</label>
        <input type="file" asp-for="Image" value="@Model.imageurl"/>
    </div>
    <br />
    <button class="btn btn-primary">Bilgileri Güncelle</button>
</form>